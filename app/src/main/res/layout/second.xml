<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:layout_constraintEnd_toEnd="parent"
    app:layout_constraintStart_toStart="parent"
    app:layout_constraintTop_toTop="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Acitivity (Roll Number)"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_gravity="center_horizontal" />

</androidx.appcompat.widget.Toolbar>

<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottom="parent"
    app:layout_constraintStart_toStart="parent"
    app:layout_constraintTopToBottom="@+id/toolbar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="ONE"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="TWO"
            android:textSize="16sp" />

    </LinearLayout>
</HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
